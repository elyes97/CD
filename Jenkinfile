pipeline {
  environment {
    registry = "elyes97/cd"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
 agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/elyes97/CD.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy Image') {
  steps{
    script {
      docker.withRegistry( '', registryCredential ) {
        dockerImage.push()
      }
    }
  }
}
  }
}


        
